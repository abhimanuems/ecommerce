<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <title>Sales Report</title>

</head>

<body>
  <header class="text-center py-4">
    <h1>Sales Report</h1>
  </header>

  <div class="container my-4">
    <div class="row">
      <div class="col-md-4">
        <label for="dateRange">Select Date Range:</label>
        <select id="dateRange" class="form-control">
          <option value="daily">Daily</option>
          <option value="weekly">Weekly</option>
          <option value="monthly">Monthly</option>
        </select>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            Summary Statistics
          </div>
          <div class="card-body">
            <p >Total Sales:₹ <span id="totalSales"> {{totalSum}}</span></p>
            <p>Total Orders: <span id="totalOrders">{{count}}</span></p>
            <p>Average Order Value:₹ <span id="averageOrder">{{avg}}</span></p>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            Sales Graph -Average
          </div>
          <div class="card-body">
            <canvas id="salesCharts"></canvas>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            Recent orders
          </div>
          <div class="card-body">
            <table class="table" id="table-template" type="text/x-handlebars-template">
              <thead>
                <tr>
                  <th>Order ID</th>
                  <th>Customer Name</th>
                  <th>Date/Time</th>
                  <th>Product Details</th>
                  <th>Product link</th>

                  <th>Total Amount</th>
                </tr>
              </thead>
              <tbody>
                {{#each data}}
                <tr>
                  <td>{{_id}}</td>
                  <td>{{phone}}</td>
                  <td>{{formatDate Date}}</td>
                   
                  <td> <div class="text-truncate" style="max-width :150px">{{products.[0].productName}}</div></td>
                  <td><a  target="_blank" href="window.location.href='/products/{{products.[0]._id}}'; ">click me</a></td>
                  <td>₹{{totalPrice}}</td>
                
                </tr>
                {{/each}}
                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    
 
    <script src="/javascripts/adminDashboard.js"></script>
</body>

</html>
