<section>
    <div class="container mt-3">
        <h3 style="color: #27374D;">Referal </h3>
        <br />
        {{#if referals}}
        <form action="/admin/verifyReferals" method="get">
            <button type="submit" class="btn btn-outline-success my-2">Approve Referrals</button>
           
        </form>
        
        <div class="table-wrapper-scroll-y my-custom-scrollbar mt-3">

            <table class="table table-striped" id="referalTable">
                <thead>
                    <tr style="font-size: .8rem;">
                        <th scope="col">Name</th>
                        <th scope="col">Mobile Number</th>
                        <th scope="col">Referal By</th>
                        <th scope="col">Wallet Balance</th>
                    </tr>
                </thead>
                {{#each referals}}
                <tbody>
                    <tr style="font-size: .8rem;">
                        <td>{{name}}</td>
                        <td>{{phone}}</td>
                        <td>{{referralInfo.[0].name}}</td>
                        <td>{{wallet}}</td>
                </tbody>
                {{/each}}
            </table>
        </div>
        {{else}}
        <div class="mt-3">
            <h5 style="color: #27374D;">Not added any Referal offer</h5>
        </div>
        {{/if}}
    </div>
</section>