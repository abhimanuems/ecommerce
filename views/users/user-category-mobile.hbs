<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li
      data-target="#carouselExampleIndicators"
      data-slide-to="0"
      class="active"
    ></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="\images\mobile1.GIF" alt="First slide" />
    </div>
  </div>

</div>

{{! viewing listed mobiles }}

<section>

  <div class="container-fluid">
    <div class="row">

      {{#each mobiles}}
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
          <div class="card my-2">
            <div class="card-header d-flex justify-content-end">
              <i class="fas fa-heart wishlist-icon"></i>
            </div>
            <div class="card-img-top">
              <img class="card-img-top img-fluid" style ="height:100px"src="\images\img.PNG" alt="Card image cap" />
            </div>

            <div class="card-body">
              <h6 class="card-title">{{productName}}</h6>
              <p class="card-text small">â‚¹{{sellingPrice}}</p>
            </div>
            <div class="d-flex justify-content-between">
              <button class="btn btn-warning ml-2 mb-2">Add to Cart</button>
              <button class="btn btn-primary mr-2 mb-2">Buy Now</button>
            </div>
          </div>
        </div>

      {{/each}}

    </div>
  </div>
</section>