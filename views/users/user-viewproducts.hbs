<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{banner.[0].banner.images.[0]}}" alt="First slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{banner.[0].banner.images.[3]}}" alt="Second slide" />
    </div>

  </div>


  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



<span class="badge badge-light mb-3 mt-3"><a
      class="link-offset-2 link-underline link-underline-opacity-0 text-decoration-none ml-4" href="#">Trending Products</a></span>

                <div class="row pb-3">
                    {{#each product}}
                    <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4 ml-2 mr-2">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0" onclick="window.location.href='/products/{{_id}}';">
                                <img class="img-thumbnail w-100" src="{{images.[0]}}" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">{{productName}}</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>₹{{offeredprice}}</h6><h6 class="text-muted ml-2" ><del style="font-size: .8rem;">₹{{sellingPrice}}</del></h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/addwishlist/{{_id}}" class="btn btn-sm text-dark p-0"><i class="fas fa-heart text-danger mr-1"></i>Add to wishlist</a>
                                <a href="/addtocart/{{_id}}" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                            </div>
                        </div>
                    </div>
                        {{/each}}
                </div>

<section>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
       
        <img class="d-block w-100" src="{{banner.[0].banner.images.[2]}}" alt="Second slide" />
     
      </div>
    </div>

  </div>
</section>

<span class="badge badge-light mb-3 mt-3"><a
      class="link-offset-2 link-underline link-underline-opacity-0 text-decoration-none ml-4" href="#">Fetaured Products</a></span>
