    <span>
        {{#if user}}
            <i onclick="window.location.href='/addwishlist/{{_id}}'" class="fas fa-heart wishlist-icon"></i>
            {{else}}
             <i onclick="openModal()" class="fas fa-heart wishlist-icon"></i>
             {{/if}}
    </span>
  </div>
  <div class="card-img-top text-center" onclick="window.location.href='/products/{{_id}}';">
    <img class="card-img-top my-3 me-3" style="height: 200px; width: auto" src="/productImages/{{_id}}.jpeg" alt="Card image cap" />
  </div>
  <div class="card-body">
    <h6 class="card-title large">{{productName}}</h6>
    <p class="card-text small">Brand: {{productBrand}}</p>
    <!-- <p class="card-text small">{{description}}</p> -->
    <p class="card-text">₹ {{offeredprice}} <del>₹{{sellingPrice}}</del></p>
    <div class="d-flex justify-content-between">
      <button class="btn btn-warning btn-sm" onclick="window.location.href='/addtocart/{{_id}}'">Add to Cart</button>
      <button class="btn btn-primary btn-sm">Buy Now</button>
    </div>
  </div>
</div>

            </div>
          {{/each}}
        </div>
      </div>
    </div>

